{% extends "main/layout.njk" %}

{% block head %}
    <title>{{ recipe.title }}</title>
    <link rel="stylesheet" href="/main/show.css">
{% endblock %}

{% block content %}
<main class="container">

    <div class="recipe-image">
        <img src="{{ recipe.image }}" alt="{{ recipe.title }} image">
    </div>

    <div class="mid-title">
        <h1>{{ recipe.title }}</h1>
        <p>por {{ recipe.chef_name }}</p>
    </div>

    <section class="ingredients">
        <h2>Ingredientes</h2>
        <a class="show">ESCONDER</a>
        <ul class="recipe-information">
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </section>

    <section class="preparation">
        <h2>Modo de preparo</h2>
        <a class="show">ESCONDER</a>
        <ul class="recipe-information">
            {% for preparation in recipe.preparation %}
                <li>{{preparation}}</li>
            {% endfor %}
        </ul>
    </section>

    <section class="add-information">
        <h2>Informações adicionais</h2>
        <a class="show">ESCONDER</a>
        <p class="recipe-information">{{ recipe.information }}</p>
    </section>
</main>
<script src="/scripts.js"></script>
{% endblock %}