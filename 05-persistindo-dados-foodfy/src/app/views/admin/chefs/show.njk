{% extends 'admin/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/admin/chefs/show.css">
    <title>Edit Chef</title>
{% endblock head %}

{% block content %}
    <main class="container">
        <div class="h2-and-button">
            <h2>Criando receita</h2>
            <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar chef</a>
        </div>
        <section class="about-chef">
            <figure>
                <img src="{{ chef.avatar_url }}" alt="Chef {{ chef.name }}">
            </figure>
            <h1>{{ chef.name }}</h1>
            <p>
                {% if total == 0 %}
                    Nenhuma receita
                {% elif total == 1 %}
                   {{ total }} receita
                {% else %}
                   {{ total }} receitas
                {% endif %}
            </p>
        </section>

        <h2>Receitas</h2>

        <section class="chef-recipes">

            {% for recipe in recipes %}
            <div class="recipe">
                <figure>
                    <img src="{{ recipe.image }}" alt="Burger image">
                </figure>
                <div class="recipe-content">
                    <h3>{{ recipe.title }}</h3>
                    <p>por {{ chef.name }}</p>
                    <div class="link">
                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            </div>
            {% endfor %}
            
        </section>
        
    </main>
{% endblock content %}