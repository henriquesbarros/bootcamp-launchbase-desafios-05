{% extends 'admin/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/admin/chefs/chefs.css">
    <title>Admin | Chefs</title>
{% endblock %}

{% block content %}
<main class="container">

    
    <div class="h2-and-button">
        <h2>Gerenciar chefs</h2>
        <a class="button" href="/admin/chefs/create">Novo chef</a>
    </div>

    <section>
        {% for chef in chefs %}
        <div class="chef">
            <figure>
                <img src="{{ chef.avatar_url }}" alt="Chef {{ chef.name }} image">
            </figure>
            <div class="chef-content">
                <p>{{ chef.name }}</p>
                <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </section>
</main>
{% endblock %}