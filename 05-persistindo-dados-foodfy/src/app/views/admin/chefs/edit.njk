{% extends 'admin/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/admin/chefs/edit.css">
{% endblock head %}

{% block content %}

<main class="container">
    <form id="form-save" action="/admin/chefs?_method=PUT" method="POST">
        <div class="h2-and-button">
            <h2>Editando chef</h2>
            <button form="form-save" type="submit" class="button">Salvar chef</button>
        </div>

        {% include 'admin/chefs/fields.njk' %}

        <input type="hidden" name="id" value="{{ chef.id }}">

    </form>

    <form class="grid-button" method="POST" action="/admin/chefs?_method=DELETE" id="form-delete">
        <input type="hidden" name="id" value="{{ chef.id }}">
        <button id="form-delete" class="button" type="submit">Deletar</button>
    </form>
    
</main>

        
{% endblock %}